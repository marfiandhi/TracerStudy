<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/colorDarkForeground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/item_alumni_image_view"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:contentPadding="2dp">

            <ImageView
                android:id="@+id/item_alumni_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBlackTransparent"
                android:contentDescription="@string/picture"
                android:scaleType="centerCrop" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/item_alumni_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Nama lengkap"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/item_alumni_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-thin"
            android:maxLines="2"
            android:text="@string/major_two"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_alumni_entrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:text="2020"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>