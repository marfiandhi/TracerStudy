<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:contentPadding="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/colorDarkForeground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_image_exclamation"
                android:src="@drawable/ic_done"
                android:layout_centerInParent="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:tint="@color/colorWhiteTransparent" />

            <TextView
                android:layout_centerInParent="true"
                android:layout_toStartOf="@id/item_image_exclamation"
                android:id="@+id/item_quiz_menu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:typeface="sans"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Teks Panjang"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>